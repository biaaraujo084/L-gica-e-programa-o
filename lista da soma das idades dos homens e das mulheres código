x:inteiro
nome:caractere
idade:inteiro
total:inteiro
sexo:caractere
total_masc:inteiro
total_fem:inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
 PARA x de 1 ate 6 faca
  ESCREVAL("Qual é seu nome?")
  LEIA(nome)
  ESCREVAL("Qual é sua idade?")
  LEIA(idade)
  ESCREVAL("Qual é seu sexo?")
  LEIA(sexo)
 SE (sexo = "feminino") ENTAO
  total_fem <- total_fem + idade
 SENAO
  total_masc <- total_masc + idade
 FIMSE
 FIMPARA
 ESCREVAL("TOTAL GERAL FEMININO = " , total_fem)
 ESCREVAL("TOTAL GERAL MASCULINO = " , total_masc)

